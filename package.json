{
  "name": "rslang",
  "private": true,
  "browserslist": [
    ">=1%",
    "not ie <= 11",
    "not dead"
  ],
  "workspaces": [
    "./src/**",
    "./configs/**/"
  ],
  "scripts": {
    "develop": "webpack-dev-server",
    "format:fix": "prettier --write .",
    "format:check": "prettier --check .",
    "lint:fix": "eslint --fix ./src & stylelint --fix src/**/*.{css,scss,pcss}",
    "lint:check": "eslint ./src & stylelint src/**/*.{css,scss,pcss}",
    "build": "webpack --mode=production",
    "server": "yarn serve dist",
    "deploy:now": "cd dist && now -d --public --prod",
    "upgrade-packages": "ncu -ui"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn format:check && yarn lint:check",
      "post-commit": "git update-index --again"
    }
  },
  "babel": {
    "extends": "./configs/babelrc.js"
  },
  "eslintConfig": {
    "extends": "./configs/linters/.eslintrc.js"
  },
  "stylelint": {
    "extends": "./configs/linters/.stylelintrc.js"
  },
  "dependencies": {
    "bootstrap": "4.5.0",
    "jquery": "3.5.1",
    "popper.js": "1.16.1"
  },
  "devDependencies": {
    "core-js": "3.6.5",
    "@babel/core": "7.10.2",
    "@babel/plugin-transform-runtime": "7.10.1",
    "@babel/preset-env": "7.10.2",
    "babel-loader": "8.1.0",
    "clean-webpack-plugin": "3.0.0",
    "css-loader": "3.5.3",
    "html-webpack-plugin": "4.3.0",
    "mini-css-extract-plugin": "0.9.0",
    "style-loader": "1.2.1",
    "postcss-loader": "3.0.0",
    "file-loader": "6.0.0",
    "webpack": "4.43.0",
    "webpack-cli": "3.3.11",
    "webpack-dev-server": "3.11.0",
    "cross-env": "7.0.2"
  },
  "optionalDependencies": {
    "husky": "4.2.5",
    "now": "19.0.1",
    "npm-check-updates": "6.0.1",
    "prettier": "2.0.5",
    "serve": "11.3.1"
  },
  "license": "ISC",
  "version": "1.0.0",
  "description": ""
}
